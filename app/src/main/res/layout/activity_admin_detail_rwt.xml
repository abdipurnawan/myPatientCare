<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminDetailRwtActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/designMainColor"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/sakitnih"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/sakit"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/namanih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pasien"
            android:textSize="14sp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="14dp"
            style="@style/textInputHintStyle"
            app:layout_constraintStart_toEndOf="@+id/sakitnih"
            app:layout_constraintTop_toTopOf="@+id/sakitnih" />

        <TextView
            android:id="@+id/namapasiennih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abdi"
            android:textSize="12sp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toEndOf="@+id/sakitnih"
            app:layout_constraintTop_toTopOf="@+id/sakitnih" />

        <TextView
            android:id="@+id/keluhannih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keluhan"
            android:textSize="14sp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="54dp"
            style="@style/textInputHintStyle"
            app:layout_constraintStart_toEndOf="@+id/sakitnih"
            app:layout_constraintTop_toTopOf="@+id/sakitnih" />

        <TextView
            android:id="@+id/keluhanpasiennih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banyak Mengeluh"
            android:textSize="12sp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="74dp"
            app:layout_constraintStart_toEndOf="@+id/sakitnih"
            app:layout_constraintTop_toTopOf="@+id/sakitnih" />

        <TextView
            android:id="@+id/lamakeluhannih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lama Keluhan"
            android:textSize="14sp"
            style="@style/textInputHintStyle"
            android:layout_marginStart="165dp"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toEndOf="@+id/sakitnih"
            app:layout_constraintTop_toTopOf="@+id/sakitnih" />

        <TextView
            android:id="@+id/lamakeluhanpasiennih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamanya"
            android:textSize="12sp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="120dp"
            app:layout_constraintStart_toEndOf="@+id/sakitnih"
            app:layout_constraintTop_toTopOf="@+id/sakitnih" />

        <TextView
            android:id="@+id/penyakitnih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penyakit Bawaan"
            android:textSize="14sp"
            style="@style/textInputHintStyle"
            android:layout_marginStart="165dp"
            android:layout_marginTop="140dp"
            app:layout_constraintStart_toEndOf="@+id/sakitnih"
            app:layout_constraintTop_toTopOf="@+id/sakitnih" />

        <TextView
            android:id="@+id/penyakitpasiennih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaki Kesemutan"
            android:textSize="12sp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="160dp"
            app:layout_constraintStart_toEndOf="@+id/sakitnih"
            app:layout_constraintTop_toTopOf="@+id/sakitnih" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>